<html>
    <head>
        <link rel="stylesheet" href="css/style.css">
        <title>
            Todo App
        </title>
    </head>
    <body>
        <div class="box">
            <h1>Todo List</h1>

        </div>
        <div class="box">
            <% ejes.forEach(function(items){ %>
                <form action="/delete" method="POST">
                    <div class="item">
                        <input type="checkbox" name="checkbox1" value="<%=items._id%>" onchange="this.form.submit()">
                        <p><%=items['task']%></p>
                    </div>
                </form>
                
                
            <% })  %>
               
            <form action="/" method="POST">
                <input type="text" name="todo" placeholder="Enter the task" >
                <button type="submit">+</button>
            </form>
        </div>
    </body>
</html>